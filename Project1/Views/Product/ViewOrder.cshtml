@model IEnumerable<Project1.Models.Order>

@{
    ViewData["Title"] = "ViewOrder";
}

<h1>ViewOrder</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Oid)
